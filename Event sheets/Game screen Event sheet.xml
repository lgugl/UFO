<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Game screen Event sheet</name>
    <events>
        <comment>Global variables:</comment>
        <variable constant="0" name="currentWeapon" static="0" type="text"></variable>
        <variable constant="0" name="defaultWeapon" static="0" type="text"></variable>
        <event-group description="" title="Start events">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Bullets" />
                        <action id="-9" name="Destroy" type="Enemies" />
                        <action id="-9" name="Destroy" type="CarrotAmmunition" />
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">defaultWeapon</param>
                            <param id="1" name="Value">&quot;potato&quot;</param>
                        </action>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">currentWeapon</param>
                            <param id="1" name="Value">defaultWeapon</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="4" name="Is empty" type="wPotatoDic" />
                    </conditions>
                    <actions>
                        <action id="0" name="Add key" type="wPotatoDic">
                            <param id="0" name="Key">&quot;name&quot;</param>
                            <param id="1" name="Value">&quot;potato&quot;</param>
                        </action>
                        <action id="0" name="Add key" type="wPotatoDic">
                            <param id="0" name="Key">&quot;fireRate&quot;</param>
                            <param id="1" name="Value">0.5</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="4" name="Is empty" type="wCarrotDic" />
                    </conditions>
                    <actions>
                        <action id="0" name="Add key" type="wCarrotDic">
                            <param id="0" name="Key">&quot;name&quot;</param>
                            <param id="1" name="Value">&quot;carrot&quot;</param>
                        </action>
                        <action id="0" name="Add key" type="wCarrotDic">
                            <param id="0" name="Key">&quot;ammunitionMax&quot;</param>
                            <param id="1" name="Value">3</param>
                        </action>
                        <action id="0" name="Add key" type="wCarrotDic">
                            <param id="0" name="Key">&quot;timeToReload&quot;</param>
                            <param id="1" name="Value">4</param>
                        </action>
                        <action id="0" name="Add key" type="wCarrotDic">
                            <param id="0" name="Key">&quot;fireRate&quot;</param>
                            <param id="1" name="Value">0.25</param>
                        </action>
                        <action id="-10" name="Set value" type="wCarrotDic">
                            <param id="0" name="Instance variable">ammunition</param>
                            <param id="1" name="Value">wCarrotDic.Get(&quot;ammunitionMax&quot;)</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="Input events">
            <sub-events>
                <event-group description="" title="Movement">
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">37 (Left arrow)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="7" name="Set mirrored" type="Player">
                                    <param id="0" name="State">0</param>
                                </action>
                                <action id="-1" name="Set X" type="Player">
                                    <param id="0" name="X">self.X - dt * self.speed</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">39 (Right arrow)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="7" name="Set mirrored" type="Player">
                                    <param id="0" name="State">1</param>
                                </action>
                                <action id="-1" name="Set X" type="Player">
                                    <param id="0" name="X">self.X + dt * self.speed</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-group>
                <event-group description="" title="Fire">
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="0" name="On key pressed" type="Keyboard">
                                    <param id="0" name="Key">32 (Espace)</param>
                                </condition>
                                <condition id="-8" inverted="1" name="Is boolean instance variable set" type="Player">
                                    <param id="0" name="Instance variable">fire</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-13" name="Set boolean" type="Player">
                                    <param id="0" name="Instance variable">fire</param>
                                    <param id="1" name="Value">1</param>
                                </action>
                            </actions>
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="0" name="Compare value" type="Weapons">
                                            <param id="0" name="Key">&quot;name&quot;</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">currentWeapon</param>
                                        </condition>
                                    </conditions>
                                    <actions />
                                    <sub-events>
                                        <event-block>
                                            <conditions>
                                                <condition id="0" name="Compare value" type="Weapons">
                                                    <param id="0" name="Key">&quot;name&quot;</param>
                                                    <param id="1" name="Comparison">0</param>
                                                    <param id="2" name="Value">&quot;potato&quot;</param>
                                                </condition>
                                            </conditions>
                                            <actions>
                                                <action id="0" name="Spawn another object" type="Player">
                                                    <param id="0" name="Object">bPotato</param>
                                                    <param id="1" name="Layer">0</param>
                                                    <param id="2" name="Image point">&quot;bullet origin&quot;</param>
                                                </action>
                                            </actions>
                                        </event-block>
                                        <event-block>
                                            <conditions>
                                                <condition id="-22" name="Else" type="System" />
                                                <condition id="-7" name="Compare instance variable" type="Weapons">
                                                    <param id="0" name="Instance variable">ammunition</param>
                                                    <param id="1" name="Comparison">4</param>
                                                    <param id="2" name="Value">0</param>
                                                </condition>
                                            </conditions>
                                            <actions />
                                            <sub-events>
                                                <event-block>
                                                    <conditions>
                                                        <condition id="0" name="Compare value" type="Weapons">
                                                            <param id="0" name="Key">&quot;name&quot;</param>
                                                            <param id="1" name="Comparison">0</param>
                                                            <param id="2" name="Value">&quot;carrot&quot;</param>
                                                        </condition>
                                                    </conditions>
                                                    <actions>
                                                        <action id="0" name="Spawn another object" type="Player">
                                                            <param id="0" name="Object">bCarrot</param>
                                                            <param id="1" name="Layer">0</param>
                                                            <param id="2" name="Image point">&quot;bullet origin&quot;</param>
                                                        </action>
                                                    </actions>
                                                </event-block>
                                                <event-block>
                                                    <conditions />
                                                    <actions>
                                                        <action id="-12" name="Subtract from" type="Weapons">
                                                            <param id="0" name="Instance variable">ammunition</param>
                                                            <param id="1" name="Value">1</param>
                                                        </action>
                                                    </actions>
                                                </event-block>
                                            </sub-events>
                                        </event-block>
                                        <event-block>
                                            <conditions />
                                            <actions>
                                                <action id="-16" name="Wait" type="System">
                                                    <param id="0" name="Seconds">Weapons.Get(&quot;fireRate&quot;)</param>
                                                </action>
                                                <action id="-13" name="Set boolean" type="Player">
                                                    <param id="0" name="Instance variable">fire</param>
                                                    <param id="1" name="Value">0</param>
                                                </action>
                                            </actions>
                                        </event-block>
                                    </sub-events>
                                </event-block>
                            </sub-events>
                        </event-block>
                    </sub-events>
                </event-group>
                <event-group description="" title="Change weapon">
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="0" name="On key pressed" type="Keyboard">
                                    <param id="0" name="Key">49 (&amp;)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">currentWeapon</param>
                                    <param id="1" name="Value">wPotatoDic.Get(&quot;name&quot;)</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="0" name="On key pressed" type="Keyboard">
                                    <param id="0" name="Key">50 (é)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">currentWeapon</param>
                                    <param id="1" name="Value">wCarrotDic.Get(&quot;name&quot;)</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-group>
            </sub-events>
        </event-group>
        <event-group description="" title="General events">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="0" name="Set text" type="Debug">
                            <param id="0" name="Text">&quot;FPS: &quot; &amp; fps</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Bullets">
                            <param id="0" name="Object">Enemies</param>
                        </condition>
                        <condition id="-7" name="Compare instance variable" type="Enemies">
                            <param id="0" name="Instance variable">health</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-12" name="Subtract from" type="Enemies">
                            <param id="0" name="Instance variable">health</param>
                            <param id="1" name="Value">Bullets.hitDamage</param>
                        </action>
                        <action id="-9" name="Destroy" type="Bullets" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                        <condition id="-7" name="Compare instance variable" type="Enemies">
                            <param id="0" name="Instance variable">health</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-18" name="Rotate clockwise" type="Enemies">
                            <param id="0" name="Degrees">dt * 720</param>
                        </action>
                        <action id="-7" name="Set size" type="Enemies">
                            <param id="0" name="Width">self.Width - self.Width * dt </param>
                            <param id="1" name="Height">self.Height - self.Height * dt</param>
                        </action>
                        <action id="-16" name="Wait" type="System">
                            <param id="0" name="Seconds">1.0</param>
                        </action>
                        <action id="-9" name="Destroy" type="Enemies" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="Weapons">
                            <param id="0" name="Instance variable">ammunition</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-13" name="Set boolean" type="Weapons">
                            <param id="0" name="Instance variable">reload</param>
                            <param id="1" name="Value">1</param>
                        </action>
                    </actions>
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="0" name="Compare value" type="Weapons">
                                    <param id="0" name="Key">&quot;name&quot;</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">currentWeapon</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-16" name="Wait" type="System">
                                    <param id="0" name="Seconds">0.5</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">currentWeapon</param>
                                    <param id="1" name="Value">defaultWeapon</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Is boolean instance variable set" type="Weapons">
                            <param id="0" name="Instance variable">reload</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-11" name="Add to" type="Weapons">
                            <param id="0" name="Instance variable">reloadTime</param>
                            <param id="1" name="Value">dt</param>
                        </action>
                        <action id="0" name="Set text" type="reload">
                            <param id="0" name="Text">Weapons.reloadTime</param>
                        </action>
                    </actions>
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-7" name="Compare instance variable" type="Weapons">
                                    <param id="0" name="Instance variable">reloadTime</param>
                                    <param id="1" name="Comparison">5</param>
                                    <param id="2" name="Value">Weapons.Get(&quot;timeToReload&quot;)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-11" name="Add to" type="Weapons">
                                    <param id="0" name="Instance variable">ammunition</param>
                                    <param id="1" name="Value">1</param>
                                </action>
                                <action id="-10" name="Set value" type="Weapons">
                                    <param id="0" name="Instance variable">reloadTime</param>
                                    <param id="1" name="Value">0</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-7" name="Compare instance variable" type="Weapons">
                                    <param id="0" name="Instance variable">ammunition</param>
                                    <param id="1" name="Comparison">5</param>
                                    <param id="2" name="Value">Weapons.Get(&quot;ammunitionMax&quot;)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-13" name="Set boolean" type="Weapons">
                                    <param id="0" name="Instance variable">reload</param>
                                    <param id="1" name="Value">0</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
        <event-block>
            <conditions>
                <condition id="-19" name="Pick all" type="System">
                    <param id="0" name="Object">CarrotAmmunition</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Destroy" type="CarrotAmmunition" />
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-12" name="Repeat" type="System">
                    <param id="0" name="Count">wCarrotDic.ammunition</param>
                </condition>
            </conditions>
            <actions>
                <action id="-3" name="Create object" type="System">
                    <param id="0" name="Object to create">CarrotAmmunition</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="X">620 - loopindex * 10</param>
                    <param id="3" name="Y">460</param>
                </action>
            </actions>
        </event-block>
        <event-group description="" title="Enemies events">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-6" name="Every X seconds" type="System">
                            <param id="0" name="Interval (seconds)">2</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-3" name="Create object" type="System">
                            <param id="0" name="Object to create">eUFO_01</param>
                            <param id="1" name="Layer">0</param>
                            <param id="2" name="X">random(50, LayoutWidth-50)</param>
                            <param id="3" name="Y">0</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-18" name="On created" type="eUFO_01" />
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Value">&quot;attack&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">&quot;attack&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-2" name="Set Y" type="eUFO_01">
                            <param id="0" name="Y">self.Y + dt * 80</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">&quot;attack&quot;</param>
                        </condition>
                        <condition id="-2" name="Compare Y" type="eUFO_01">
                            <param id="0" name="Comparison">5</param>
                            <param id="1" name="Y co-ordinate">targetLineBottom.Y</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Value">&quot;land&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">&quot;land&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="Sine" id="0" name="Set active" type="eUFO_01">
                            <param id="0" name="State">0</param>
                        </action>
                        <action behavior="Sine2" id="0" name="Set active" type="eUFO_01">
                            <param id="0" name="State">0</param>
                        </action>
                        <action id="-16" name="Wait" type="System">
                            <param id="0" name="Seconds">2</param>
                        </action>
                        <action id="-10" name="Set value" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Value">&quot;flee&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="eUFO_01">
                            <param id="0" name="Instance variable">state</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">&quot;flee&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-2" name="Set Y" type="eUFO_01">
                            <param id="0" name="Y">self.Y - dt * 160</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
