<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Title screen Event sheet</name>
    <events>
        <event-block>
            <conditions>
                <condition behavior="Fade" id="0" name="On fade out finished" type="pressToStart" />
            </conditions>
            <actions>
                <action behavior="Fade" id="0" name="Restart fade" type="pressToStart" />
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" name="On any key pressed" type="Keyboard" />
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Game screen</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
